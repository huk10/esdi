{
  "name": "esdi",
  "version": "0.0.1",
  "type": "module",
  "description": "a JavaScript dependency injection library",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm && pnpm build:types",
    "build:cjs": "tsc -p .",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:types": "tsc -p config/tsconfig.types.json",
    "test": "vitest run --config config/vitest.config.mjs",
    "test:coverage": "vitest run --coverage --config config/vitest.config.mjs",
    "prepare": "husky install",
    "commit": "better-commits",
    "release": "release-it",
    "lint": "eslint --ext \".js,.cjs,.mjs,.ts,.cts,.mts\" \"./src\"",
    "lint:fix": "eslint --fix --ext \".js,.cjs,.mjs,.ts,.cts,.mts\" \"./src\""
  },
  "author": "Hu Kun",
  "license": "MIT",
  "release-it": {
    "npm": {
      "publish": false
    }
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "*.{ts,cts,mts,js,cjs,mjs}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-swc": "^0.3.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.103",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitest/coverage-v8": "^1.2.1",
    "better-commits": "^1.8.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.2.1",
    "release-it": "^17.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "vite": "^5.1.4",
    "vitest": "1.2.0"
  }
}
