{
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "rootDir": "../src",
    "outDir": "../dist",
    "stripInternal": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["es2017", "dom"]
  },
  "include": ["../src/"],
}
